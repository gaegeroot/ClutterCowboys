<LandingPageLayout>
  <section class="section-frame mx-xxl-11 overflow-hidden">
    <div
      class="wrapper image-wrapper bg-image bg-cover shadow-xl hero-wrapper"
      data-image-src=`${Astro.site.origin}/images/junk-landing-hero.jpg`
    >
      <div class="px-10 py-16 py-md-18 position-relative">
        <div class="row">
          <div class="col-sm-8 col-lg-5">
            <h1 class="display-1 fs-70 mb-5">
              Tucson's Best Junk Removal Team.
            </h1>
            <p class="lead fs-24 mb-8">
              We'll make your junk disappear quickly and affordably. Old
              furniture, appliances, remodel materials, garage junk, whatever. <strong
                >We'll handle it.</strong
              ><br />Give us a call today or estimate your quote below.
            </p>
            <div
              class="d-flex flex-wrap"
              id="page-title-buttons"
              data-cues="slideInDown"
              data-group="page-title-buttons"
              data-delay="900"
            >
              <span
                ><a
                  href="tel:520-600-6322"
                  class="btn btn-primary rounded-pill btn-icon btn-icon-start text-white me-4 mt-5"
                  ><i class="uil uil-phone"></i>520-600-6322</a
                ></span
              >
              <div class="d-flex mt-5 ">
                <span class="me-4 fs-22 mt-1">or</span>
                <a
                  href="#estimate-job"
                  class="btn btn-expand btn-soft-primary rounded-pill scroll"
                >
                  <i class="uil uil-arrow-right"></i>
                  <span>Get a quick estimate</span>
                </a>
              </div>
            </div>
          </div>
          <!-- /column -->
        </div>
        <!-- /.row -->
      </div>
    </div>
    <!-- /.wrapper -->
  </section>
  <!-- /section -->
