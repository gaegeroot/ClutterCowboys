---
import HeadContent from '../components/HeadContent.astro';
import "../styles/style.scss";
---

<!DOCTYPE html>
<html lang="en">
  <HeadContent/>

  <body>
    <div class="content-wrapper">
      <header class="wrapper mb-2">
       <nav class="navbar navbar-expand-lg classic transparent navbar-light">
          <div class="container flex-lg-row flex-nowrap align-items-center">
            <div class="navbar-brand me-6 py-3">
              <a href="/">
                <img src="/images/cc-text-logo.png" alt="">
              </a>
            </div>
            <div class="navbar-other ms-lg-4">
              <ul class="navbar-nav flex-row align-items-center ms-auto">
                <li class="me-2 text-center"><strong><u>Call for your free no-obligation estimate</u></strong></li>
                <li class="nav-item">
                  <a href="tel:520-600-6322" class="btn btn-sm btn-primary rounded-pill text-white">520-600-6322</a>
                </li>
              </ul>
              <!-- /.navbar-nav -->
            </div>
            <!-- /.navbar-other -->
          </div>
        </nav>
      </header>
      <slot />
    </div>
    <footer class="bg-navy text-inverse">
      <div class="container pt-15 pt-md-10 pb-13 pb-md-15">
        <div class="d-lg-flex flex-row align-items-lg-center">
          <h3
            class="display-4 mb-6 mb-lg-0 pe-lg-20 pe-xl-22 pe-xxl-25 text-white"
          >
            Give us a call today to handle all your junk hauling needs.
          </h3>
          <a
            href="tel:520-600-6322"
            class="btn btn-primary btn-lg rounded-pill mb-0 btn-icon btn-icon-start text-white"
            ><i class="uil uil-phone"></i>520-600-6322</a
          >
        </div>
        <!--/div -->
        <hr class="mt-11 mb-12" />
        <div class="row gy-6 gy-lg-0">
          <div class="col-md-4 col-lg-3">
            <div class="widget">
              <img
                class="mb-4"
                src="/logo_200.png"
                alt="Clutter Cowboys Logo"
              />
              <p class="mb-4">
                Clutter Cowboys Â© 2023. <br class="d-none d-lg-block" />All
                rights reserved.
              </p>
            </div>
            <!-- /.widget -->
          </div>
          <!-- /column -->
          <div class="col-md-4 col-lg-3">
            <div class="widget">
              <h4 class="widget-title text-white mb-3">Areas We Service</h4>
              <ul class="unordered-list bullet-primary">
                <li>Central Tucson</li>
                <li>Oro Valley</li>
                <li>Marana</li>
                <li>Catalina Foothills</li>
                <li>South Tucson</li>
                <li>Corona de Tucson</li>
                <li>Vail</li>
              </ul>
            </div>
            <!-- /.widget -->
          </div>
          <!-- /column -->
          <div class="col-md-4 col-lg-3">
            <div class="widget">
              <h4 class="widget-title text-white mb-3">Important Links</h4>
              <ul class="list-unstyled mb-0">
               <li><a href="/services">Services</a></li>
                <li><a href="/contact-us">Contact Us</a></li>
                <li><a href="/terms-of-use">Terms of Use</a></li>
                <li><a href="/privacy-policy">Privacy Policy</a></li>
              </ul>
            </div>
            <!-- /.widget -->
          </div>
          <!-- /column -->
          <div class="col-md-12 col-lg-3">
            <div class="widget">
              <h4 class="widget-title text-white mb-3">Get in Touch</h4>
              <address class="pe-xl-15 pe-xxl-17">Sunny Tucson, AZ</address>
              <a href="mailto:#">hello@cluttercowboys.com</a><br /><a
                href="tel:520-600-6322">520-600-6322</a
              >
            </div>
            <!-- /.widget -->
          </div>
          <!-- /column -->
        </div>
        <!--/.row -->
      </div>
      <!-- /.container -->
    </footer>
    <div class="progress-wrap">
      <svg
        class="progress-circle svg-content"
        width="100%"
        height="100%"
        viewBox="-1 -1 102 102"
      >
        <path d="M50,1 a49,49 0 0,1 0,98 a49,49 0 0,1 0,-98"></path>
      </svg>
    </div>

    <script is:inline src=`${Astro.site.origin}/scripts/vendor/bootstrap.bundle.min.js`></script>
    <script is:inline src=`${Astro.site.origin}/scripts/vendor/headhesive.min.js`></script>
    <script is:inline src=`${Astro.site.origin}/scripts/vendor/imagesloaded.pkgd.min.js`></script>
    <script is:inline src=`${Astro.site.origin}/scripts/vendor/isotope.pkgd.min.js`></script>
    <script is:inline src=`${Astro.site.origin}/scripts/vendor/scrollCue.min.js`></script>
    <script is:inline src=`${Astro.site.origin}/scripts/vendor/smoothscroll.js`></script>
    <script is:inline src=`${Astro.site.origin}/scripts/vendor/svg-inject.min.js`></script>
    <script is:inline src=`${Astro.site.origin}/scripts/vendor/swiper-bundle.min.js`></script>
    <script is:inline src=`${Astro.site.origin}/scripts/theme.js`></script>
  </body>
</html>
